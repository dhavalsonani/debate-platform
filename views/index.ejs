      <div class="create-debate" id="create-debate-window">
        <div class="create-debate-header">
          <span>Create Debate</span>
        </div>
        <form action="/createdebate" method="post">
            <label for="title">Title:</label><br>
            <textarea class="create-debate-title" id="title" name="title"></textarea><br><br>
            <label for="tags">Tags:</label><br>
            <input class="create-debate-tags" type="text" id="tags" name="tags"><br><br>
            <input type="submit" class="button" id="submit">
            <button class="create-debate-close button" id="create-debate-close">Close</button>
        </form>
      </div>
    <div id="overlay">

    </div>

      <div>
        <div class="container"></div>
          <% debates.forEach(function(debate){ %>
            <div class="debate-tile">
              <a class="debate-title" href="/debate_?debate_id=<%=debate._id%>"><%= debate.title %></a>
              <div class="debate-like-panel">
                <i class= "far fa-heart"></i>
                <span> <%= debate.likes %></span>
                <i class="far fa-comment"></i>
                <span>3</span>
                <i class="fas fa-users"></i>
                <span> 5</span>
                <% if(is_admin) { %>
                  <a href="/deletedebate?debate_id=<%= debate._id %>" style="color: rgb(247, 92, 92)"><i class="far fa-trash-alt" id="debate-delete"></i></a>
                <% } %>
              </div>
            </div>
          <% }); %>
          </div>
      </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
